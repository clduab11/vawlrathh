# ============================================================================
# EditorConfig - Consistent Coding Styles Across Editors/IDEs
# ============================================================================
# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
#
# More info: https://editorconfig.org
#
# Supported editors:
# - VS Code (with EditorConfig extension)
# - PyCharm/IntelliJ (built-in support)
# - Sublime Text (with EditorConfig plugin)
# - Vim/Neovim (with editorconfig-vim plugin)
# - Emacs (with editorconfig-emacs plugin)
# - And many more...
#
# Last updated: 2025-11-11
# ============================================================================

# Top-most EditorConfig file
root = true

# ---------------------------------------------------------------------------
# Default settings for all files
# ---------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ---------------------------------------------------------------------------
# Python files
# ---------------------------------------------------------------------------
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# ---------------------------------------------------------------------------
# Python stub files
# ---------------------------------------------------------------------------
[*.pyi]
indent_style = space
indent_size = 4
max_line_length = 100

# ---------------------------------------------------------------------------
# YAML files
# ---------------------------------------------------------------------------
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ---------------------------------------------------------------------------
# JSON files
# ---------------------------------------------------------------------------
[*.json]
indent_style = space
indent_size = 2

# ---------------------------------------------------------------------------
# TOML files
# ---------------------------------------------------------------------------
[*.toml]
indent_style = space
indent_size = 4

# ---------------------------------------------------------------------------
# Markdown files
# ---------------------------------------------------------------------------
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Preserve double spaces for line breaks
max_line_length = 80

# ---------------------------------------------------------------------------
# ReStructuredText files
# ---------------------------------------------------------------------------
[*.rst]
indent_style = space
indent_size = 3
max_line_length = 80

# ---------------------------------------------------------------------------
# Shell scripts
# ---------------------------------------------------------------------------
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# ---------------------------------------------------------------------------
# Batch files (Windows)
# ---------------------------------------------------------------------------
[*.{cmd,bat}]
indent_style = space
indent_size = 2
end_of_line = crlf

# ---------------------------------------------------------------------------
# Makefile (tabs required)
# ---------------------------------------------------------------------------
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# ---------------------------------------------------------------------------
# Docker files
# ---------------------------------------------------------------------------
[{Dockerfile,Dockerfile.*,*.dockerfile}]
indent_style = space
indent_size = 4

# ---------------------------------------------------------------------------
# Configuration files
# ---------------------------------------------------------------------------
[.{babelrc,eslintrc,prettierrc}]
indent_style = space
indent_size = 2

# ---------------------------------------------------------------------------
# Package manifests
# ---------------------------------------------------------------------------
[{package.json,package-lock.json}]
indent_style = space
indent_size = 2

# ---------------------------------------------------------------------------
# Git config
# ---------------------------------------------------------------------------
[.gitconfig]
indent_style = tab

# ---------------------------------------------------------------------------
# GitHub Actions workflow files
# ---------------------------------------------------------------------------
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# ---------------------------------------------------------------------------
# CI/CD configuration files
# ---------------------------------------------------------------------------
[{.travis.yml,.gitlab-ci.yml,.circleci/config.yml}]
indent_style = space
indent_size = 2

# ============================================================================
# Notes:
# ============================================================================
# - These settings override your editor's default settings
# - Install the EditorConfig plugin for your editor if needed
# - Some settings may not be supported by all editors
# - For Python, these settings align with PEP 8 and Black formatter
# ============================================================================
